<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--    Hello Servlet home page     -->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello-servlet</url-pattern>
    </servlet-mapping>

    <!--    contact servlet     -->
    <servlet>
        <servlet-name>ContactForm</servlet-name>
        <servlet-class>ContactForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContactForm</servlet-name>
        <url-pattern>/contact-form</url-pattern>
    </servlet-mapping>

    <!--    About Us servlet    -->
    <servlet>
        <servlet-name>AboutUs</servlet-name>
        <servlet-class>AboutUs</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AboutUs</servlet-name>
        <url-pattern>/about-us</url-pattern>
    </servlet-mapping>

    <!--    Process Contact Form servlet    -->
    <servlet>
        <servlet-name>ProcessContactForm</servlet-name>
        <servlet-class>ProcessContactForm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProcessContactForm</servlet-name>
        <url-pattern>/process-contact-form</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProcessContactForm</servlet-name>
        <url-pattern>/thankyou</url-pattern>
    </servlet-mapping>

    <!--    Filter Hit Count servlet    -->
    <filter>
        <filter-name>HitCountFilter</filter-name>
        <filter-class>HitCountFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>HitCountFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

</web-app>